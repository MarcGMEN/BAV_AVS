<?php
require "../Functions/ouvrageType_functions.php"; 

function return_cso_ajax($id) {
  $row = return_champsOuvrage($id);
  $row['cso_libelle']=utf8Encode($row['cso_libelle_court']);
  $row['cso_libelle']=utf8Encode($row['cso_libelle']);
  $row['cso_val_defaut']=utf8Encode($row['cso_val_defaut']);
    
  return $row;
  
}

function return_sto_ajax($id) {
  $row = return_classementOuvrage($id);
  $row['sto_libelle']=utf8Encode($row['sto_libelle_court']);
  $row['sto_libelle']=utf8Encode($row['sto_libelle']);
    
  return $row;
  
}

function return_cho_ajax($id) {
  $row = return_champOuvrage($id);
  $row['cho_valeur_char']=utf8Encode($row['cho_valeur_char']);
    
  return $row;
  
}

function add_cho_ajax($cso,$val) {
	return add_cho($cso,$val);
	
}

function return_chosFromTyo_ajax($tyo) {
	return return_AllChampOuvrageForTyo($tyo);
}

function return_classements_ajax($tyo) {
	
	$tabOuvrage=return_AllClassementsOuvrage($tyo);
	$tabPlat = miseAPlat($tabOuvrage,"sto_sous");
	
	foreach ($tabPlat  as $key => $val) {
		$tabPlat[$key]['sto_libelle_court']=utf8Encode($val['sto_libelle_court']);
		$tabPlat[$key]['sto_libelle']=utf8Encode($val['sto_libelle']);
	}
	
	return $tabPlat;
}
