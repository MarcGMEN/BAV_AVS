<?php

function return_rubrique_ajax($rubrique) {
  $tabRet = return_rubrique($rubrique);
  $tabImages=array();
  $tabImages[0]="";
  $tabImages=array_merge($tabImages,searchFiles(CFG_REP_IMAGE_SITE,".jpg"));
  $tabImages=array_merge($tabImages,searchFiles(CFG_REP_IMAGE_SITE,".png"));
  $tabImages=array_merge($tabImages,searchFiles(CFG_REP_IMAGE_SITE,".gif"));
  $tabRet['images']=$tabImages;
  $tabIcones=array();
  $tabIcones[0]="";
  $tabIcones=array_merge($tabIcones,searchFiles(CFG_REP_IMAGE_SITE."/Icones",".jpg"));
  $tabIcones=array_merge($tabIcones,searchFiles(CFG_REP_IMAGE_SITE."/Icones",".png"));
  $tabIcones=array_merge($tabIcones,searchFiles(CFG_REP_IMAGE_SITE."/Icones",".gif"));
  $tabRet['icones']=$tabIcones;
  
  $tabRet['rubriques']=return_rubriquesLinear();
  
  foreach ($tabRet['rubriques'] as $key => $val) {
    $tabRet['rubriques'][$key]['rub_libelle']=utf8Encode($val['rub_libelle']);
  }
  
  $tabRet['rub_libelle']= utf8Encode(stripcslashes($tabRet['rub_libelle']));
  
  return $tabRet;
}
?>