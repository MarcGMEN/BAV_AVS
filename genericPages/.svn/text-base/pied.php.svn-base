<?php
$tabConfig=XMLToArray('config/config_pied.xml');
if (isset($tabConfig['APPLETS']['APPLET'])) {?>
<table class="PP_<?=$classMenu?>" width="100%" BORDER=0 cellpadding="0" cellspacing="0">
		<tr>
		<?php if (!isset($tabConfig['APPLETS']['APPLET']['value'])) {
		  $tail=(int)(100/sizeof($tabConfig['APPLETS']['APPLET']));?>
		  <?php foreach($tabConfig['APPLETS']['APPLET'] as $val) {?>
			<td  class="PP_<?=$classMenu?>"  valign="middle" width="<?=$tail?>%" >
				  <?
  				try {
	  				$include=return_bloc($val['value'],"pied");
		  			include $include;
				}
			  	catch ( ErrorException $e ) {
				  	echo $val;
				}?>
			</td>
		<?php }?>
		<?php }
		else { // une seule applet ?>
				<td  class="PP_<?=$classMenu?>"  width="100%">
				<?
				try {
				  $include=return_bloc($tabConfig['APPLETS']['APPLET']['value'],"pied");
				  include $include;
				}
				catch ( ErrorException $e ) {
					echo $val;
				}?>
				</td>
		
		<?php }?>
		</tr>
</table>
<?php }
else {?>
  <script>	
  	getElement('pied').style.display="none";
  </script>
<?php }?>