<script>
    
    function searchNom(nom, force) {
        if (nom.value.length < 1 && force) {
            alert("Saisisez au moins un caractère !" );
        }
        else if (nom.value.length > 2 || force) {
    		x_return_emprunteurs_ajax(nom.value, display_nomSearch);
        }
        return false;
    }

    function display_nomSearch(val) {
        if (typeof val == "object") {
        	var repr="<table width='100%' cellpadding=1 cellspacing=1 >";
        	repr+="<tr>";
        	repr+="<td class='tittab' width='70%' >Nom</td>";
        	repr+="<td class='tittab' width='25%' >Droit</td>";
        	<?php if ($DROIT_MODIF_RUB_USER) {?>
			repr+="<td class='tittab' width='5%'>Action</td>";
      		<?php }?>
        	repr+="</tr>";
    		
    		for (index in val ) {
    			var nom=val[index]['oep_nom'];
    			repr+="<tr class='tabl0' >";
    			repr+="<td class='link' ";
    			repr+=" onclick='x_affectAdherent("+val[index]['oep_id']+", display_affect)' ";
    			repr+=">";
    			repr+=nom;
    			repr+="</td>";
    			repr+="<td>";
    			repr+=val[index]['oep_etat'];
    			repr+="</td>";
    			<?php if ($DROIT_MODIF_RUB_USER) {?>
    			repr+="<td >";
    			repr+="<table width=100% class='maj'>";
    			repr+="<tr>";
    			repr+="     <td valign='top' align='center' width='5%' >";
    			repr+="    	<img src='Images/b_edit.png' border='0'";
    			repr+="    		alt='Modifier'  title='Modifier'";
    			repr+="    		onclick=\"x_return_emprunteur_ajax('"+val[index]['oep_id']+"', display_oep_maj)\"";
    			repr+="   		class='link' />";
    			repr+="	   </td>";
    			repr+="</tr>";
    			repr+="</table>";
    			repr+="</td>";
          		<?php }?>
    			repr+="</tr>";
    		}
    		repr+=" </table>";
        	getElement("resNom").innerHTML=repr;
        }
    }
  
</script>
	        

