/*
 * retourne un user pour un id
 */
function return_contact($id) {
  $requete = "select * from  ".CFG_PREFIXE_TABLE."contact";
$requete .= " where ctc_id = $id ";
  //echo $requete;
  $resultat = mysql_query($requete);
  
  if (!$row = mysql_fetch_array($resultat, MYSQL_ASSOC) ) {
    echo "erreur sur $requete ";
  }
  //print_r($tab);
  return $row;
}
  


/*
 * retourne tous les contacts
 */
function return_contacts() {
  $requete = "select * from  ".CFG_PREFIXE_TABLE."contact";
  //echo $requete;
  $resultat = mysql_query($requete);

  $tab=array();
  while ($row = mysql_fetch_array($resultat, MYSQL_ASSOC) ) {
    $tab[$row['ctc_id']]=$row;
  }
  
  return $tab;
}

